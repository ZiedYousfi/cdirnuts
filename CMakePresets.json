{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "vcpkg-tests",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "vcpkg-debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Debug",
        "DEBUG_FLAG": "ON"
      }
    },
    {
      "name": "vcpkg-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "DEBUG_FLAG": "OFF",
        "BUILD_TESTS": "OFF",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG -flto -funroll-loops -march=native"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vcpkg",
      "configurePreset": "vcpkg",
      "description": "Build using the vcpkg toolchain and Ninja"
    },
    {
      "name": "build-tests",
      "configurePreset": "vcpkg-tests",
      "description": "Build the tests using the vcpkg toolchain and Ninja",
      "targets": [
        "cdirnuts_test"
      ]
    },
    {
      "name": "debug",
      "configurePreset": "vcpkg-debug",
      "description": "Build in Debug mode using the vcpkg toolchain and Ninja"
    },
    {
      "name": "release",
      "configurePreset": "vcpkg-release",
      "description": "Build in Release mode using the vcpkg toolchain and Ninja"
    }
  ]
}
